{
    "compilerOptions": {
        "lib": ["ESNext"],
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "ESNext",
        "removeComments": true,
        "preserveConstEnums": true,
        "resolveJsonModule": true,
        "outDir": "dist",
        "sourceMap": false,
        "esModuleInterop": true,
        "baseUrl": ".",
        "typeRoots": [
            "node_modules/@types"
        ],
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ]
}